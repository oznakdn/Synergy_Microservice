@page "/Register"
@model Synergy.WebApp.Pages.User.RegisterModel


<div class="row justify-content-center">
    @if (ViewData["success"] != null)
    {
        <div class="alert alert-primary col-3" role="alert">
            @ViewData["success"]
        </div>
    }
    @if (ViewData["error"] != null)
    {
        <div class="alert alert-danger col-3" role="alert">
            @ViewData["error"]
        </div>
    }
</div>


<div class="row justify-content-center">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <div class="row col">
                    <div class="display-6 text-center my-5">REGISTER</div>
                </div>
                <form method="post">
                    <div class="form-outline mb-4">
                        <input type="text" id="form2Example1" asp-for="RegisterInput.Username" class="form-control" placeholder="Username" />
                    </div>

                    <div class="form-outline mb-4">
                        <input type="email" id="form2Example1" asp-for="RegisterInput.Email" class="form-control" placeholder="Email" />
                    </div>

                    <div class="form-outline mb-4">
                        <input type="password" id="form2Example2" asp-for="RegisterInput.Password" class="form-control" placeholder="Password" />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-block mb-4">Sign Up</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

