@page "/Teams"
@model Synergy.WebApp.Pages.Team.GetTeamsModel


<div class="row col my-4">
    <div class="display-6 text-center">Teams</div>
</div>

<div class="row my-4 justify-content-center">
    <div class="col-8 text-center">
        <table class="table table-hover table-striped table-responsive table-secondary">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in Model.Teams)
                {
                    <tr>
                        <td>@team.Id</td>
                        <td>@team.Name</td>
                        <td>@team.Description</td>
                        <td>
                            <a asp-page="/Team/GetTeamMembers" asp-route-teamId="@team.Id" class="btn btn-warning btn-sm">Team Members</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
