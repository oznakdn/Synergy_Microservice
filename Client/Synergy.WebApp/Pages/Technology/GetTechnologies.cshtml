@page "/Technologies"
@model Synergy.WebApp.Pages.Technology.GetTechnologiesModel


<div class="row col my-4">
    <div class="display-6 text-center">Technologies</div>
</div>

<div class="row justify-content-lg-end my-3">
    <div class="col-4">
        <a asp-page="/Technology/CreateTechnology" class="btn btn-primary btn-sm">Create</a>
    </div>
</div>

<div class="row my-4 justify-content-center">
    <div class="col-10 text-center">
        <table class="table table-hover table-striped table-responsive table-secondary">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in Model.Technologies)
                {
                    <tr>
                        <td>@team.Id</td>
                        <td>@team.Name</td>
                        <td>@team.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>