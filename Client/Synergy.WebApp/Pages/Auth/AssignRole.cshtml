@page "/Auth/AssignRole"
@model Synergy.WebApp.Pages.Auth.AssignRoleModel


    <div class="row justify-content-center">
        <div class="col-4">
            @if (ViewData["error"] is not null)
            {
                <div class="alert alert-danger" role="alert">
                   @ViewData["error"]
                </div>
            }
        </div>
    </div>


    <div class="row justify-content-center my-5">
        <div class="display-6 text-center">Assign Role</div>
        <div class="col-6 my-5">
            <form method="post">
                <div class="form-group">
                    <select asp-items="Model.RoleList" asp-for="AssignRole.RoleId" name="roleId" class="form-control">
                        <option value="">Select a Role</option>
                    </select>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a asp-page="/Auth/GetUsers" class="btn btn-warning">Back</a>
                </div>
            </form>
        </div>
    </div>
