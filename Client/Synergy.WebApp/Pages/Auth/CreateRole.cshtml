@page "/Auth/CreateRole"
@model Synergy.WebApp.Pages.Auth.CreateRoleModel

<div class="row justify-content-center my-5">
    <div class="col-6">
        <div class="card">
            <div class="card-title">Creating a Role</div>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group my-3">
                    <input asp-for="CreateRole.RoleName" placeholder="Role Name" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <input asp-for="CreateRole.Description" placeholder="Role Description" class="form-control" />
                </div>
                <div class="form-group my-3">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a asp-page="/Auth/GetRoles" class="btn btn-warning">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
