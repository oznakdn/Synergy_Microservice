@page "/register"
@model Synergy.Web.Pages.Auth.RegisterModel


    <div class="row justify-content-center my-3">
        <div class="jumbotron-fluid text-center">
            <div class="display-3"><i class="fas fa-cube"></i> SYNERGY</div>
        </div>
    </div>
    <div class="row justify-content-center my-xl-4">
        <div class="card account-dialog">
            <div class="card-header bg-primary text-white text-center"> Sign Up </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <input type="text" asp-for="RegisterInput.Username" class="form-control" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <input type="email" asp-for="RegisterInput.Email" class="form-control" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input type="password" asp-for="RegisterInput.Password" class="form-control" placeholder="Password">
                    </div>
                    <div class="account-dialog-actions">
                        <button type="submit" class="btn btn-primary">Sign up</button>
                        <a class="account-dialog-link" asp-page="/Auth/Login">Already have an account?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>