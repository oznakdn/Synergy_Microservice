@page "/update-role"
@model Synergy.Web.Pages.Auth.UpdateRoleModel


<div id="alert" class="row justify-content-center">
    <div class="col-4">
        @if (ViewData["RoleUpdateFailure"] != null)
        {
            <div class="alert alert-warning text-center" role="alert">@ViewData["RoleUpdateFailure"]</div>
        }
    </div>
</div>

<div class="row justify-content-center">
    <div class="card" style="width: 40rem;">
        <div class="card-body">
            <h5 class="card-title display-6">Updating Role</h5>
            <form method="post" asp-page-handler="Edit" class="my-4">
                <input type="hidden" asp-for="@Model.UpdateRole.Id" />
                <div class="form-group my-2">
                    <input type="text" asp-for="@Model.UpdateRole.RoleName" class="form-control input-lg" placeholder="Name">
                </div>
                <div class="form-group my-2">
                    <input type="text" asp-for="@Model.UpdateRole.Description" class="form-control input-lg" placeholder="Description">
                </div>
                <div class="form-group my-4">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
                    <a asp-page="/Auth/GetRoles" class="btn btn-warning btn-lg btn-block">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(() => {
            $("#alert").hide(5000);
        });
    </script>

}